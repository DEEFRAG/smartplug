        <TextView android:textSize="@dimen/timer_text_text_size" android:textColor="@color/black" android:id="@id/linkage_timer_from" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_10" android:text="From" android:layout_below="@id/linkage_timer_change_title" />
        <TextView android:textSize="@dimen/timer_text_text_size" android:textColor="@color/black" android:id="@id/linkage_timer_opentime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_10" android:text="9:53" android:layout_toRightOf="@id/linkage_timer_from" android:layout_below="@id/linkage_timer_change_title" />
        <TextView android:textSize="@dimen/timer_text_text_size" android:textColor="@color/black" android:id="@id/linkage_timer_to" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_10" android:text="to" android:layout_toRightOf="@id/linkage_timer_opentime" android:layout_below="@id/linkage_timer_change_title" />
        <TextView android:textSize="@dimen/timer_text_text_size" android:textColor="@color/black" android:id="@id/linkage_timer_closetime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_10" android:text="9:53" android:layout_toRightOf="@id/linkage_timer_to" android:layout_below="@id/linkage_timer_change_title" />
    </RelativeLayout>
    <TextView android:textSize="@dimen/timer_text_text_size" android:textColor="@color/black" android:id="@id/repeat_date_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_10" android:layout_marginTop="@dimen/timer_open_layoutmargintop" android:text="@string/timer_repeat_date_text" android:singleLine="true" />
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/timer_open_layoutmargintop">
