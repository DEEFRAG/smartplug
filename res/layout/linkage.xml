        <Button android:id="@id/timer_repeat_date_1" android:background="@drawable/timer_repart_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_5" android:minWidth="@dimen/buttonminwidth" android:minHeight="@dimen/buttonminheight" android:text="@string/timer_repeat_date_1" />
        <Button android:id="@id/timer_repeat_date_2" android:background="@drawable/timer_repart_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_5" android:minWidth="@dimen/buttonminwidth" android:minHeight="@dimen/buttonminheight" android:text="@string/timer_repeat_date_2" />
        <Button android:id="@id/timer_repeat_date_3" android:background="@drawable/timer_repart_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_5" android:minWidth="@dimen/buttonminwidth" android:minHeight="@dimen/buttonminheight" android:text="@string/timer_repeat_date_3" />
