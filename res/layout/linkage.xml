        <Button android:id="@id/timer_repeat_date_5" android:background="@drawable/timer_repart_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_5" android:minWidth="@dimen/buttonminwidth" android:minHeight="@dimen/buttonminheight" android:text="@string/timer_repeat_date_5" />
        <Button android:id="@id/timer_repeat_date_6" android:background="@drawable/timer_repart_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_5" android:minWidth="@dimen/buttonminwidth" android:minHeight="@dimen/buttonminheight" android:text="@string/timer_repeat_date_6" />
    </LinearLayout>
    <RelativeLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@id/timepicker_main" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/timer_pickdata_text_height" android:layout_marginTop="@dimen/timer_open_layoutmargintop" android:alpha="0.5">
        <TextView android:textSize="@dimen/timer_text_text_size" android:id="@id/timerset_set_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/timer_margin_10" android:text="@string/timerset_set_cancel" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
        <TextView android:textSize="@dimen/timer_text_text_size" android:id="@id/timerset_set_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/timerset_set_title" android:layout_centerInParent="true" />
        <TextView android:textSize="@dimen/timer_text_text_size" android:id="@id/timerset_set_ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/timer_margin_20" android:text="@string/timerset_set_ok" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
